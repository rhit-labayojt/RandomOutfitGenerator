<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/carousel_holder"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="?attr/colorSecondaryVariant"
    android:layout_margin="@dimen/outfit_view_margin"
    android:padding="@dimen/carousel_padding">

    <ImageView android:id="@+id/home_top"
        style="@style/saved_outfits_port"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"/>

    <ImageView android:id="@+id/home_bottom"
        style="@style/saved_outfits_port"
        android:layout_below="@id/home_top"
        android:layout_alignParentStart="true"/>

    <ImageView android:id="@+id/home_shoes"
        style="@style/saved_outfits_port"
        android:layout_toRightOf="@id/home_bottom"
        android:layout_below="@id/home_accessories"/>

    <ImageView android:id="@+id/home_accessories"
        style="@style/saved_outfits_port"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/home_top"/>

    <ImageView android:id="@+id/home_full_body"
        style="@style/saved_outfits_port"
        android:layout_height="@dimen/saved_outfits_full_body_port"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"/>

</RelativeLayout>