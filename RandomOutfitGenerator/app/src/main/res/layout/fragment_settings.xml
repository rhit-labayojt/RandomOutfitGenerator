<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.SettingsFragment">

    <androidx.cardview.widget.CardView android:id="@+id/settings_profile_button_holder"
        style="@style/settings_cardview"
        app:cardCornerRadius="@dimen/settings_cardview_radius"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <Button android:id="@+id/user_edit"
            style="@style/settings_button"
            android:text="@string/settings_profile" />

    </androidx.cardview.widget.CardView>

</RelativeLayout>